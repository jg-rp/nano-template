# .clang-tidy
---
Checks: >
  clang-analyzer-*,
  readability-*,
  performance-*,
  bugprone-*,
  misc-*,
  -clang-analyzer-alpha.*,
  -modernize-*,
  -cppcoreguidelines-,
  -misc-no-recursion,
  -readability-function-cognitive-complexity

WarningsAsErrors: "*"

HeaderFilterRegex: "^(src|include)/.*"

AnalyzeTemporaryDtors: false

CheckOptions:
  - key: readability-braces-around-statements.ShortStatementLines
    value: "1" # Force braces for single-line statements
  - key: readability-function-size.LineThreshold
    value: "150" # Warn on functions longer than 150 lines
  - key: readability-magic-numbers.IgnoredNumbers
    value: "0,1,-1" # Ignore common constants
  - key: readability-named-parameter.IgnoreMacros
    value: "true"
  - key: clang-analyzer-optin.cplusplus.VirtualCall
    value: "false" # Not relevant for pure C
  - key: readability-identifier-length.MinimumVariableNameLength
    value: "2"
  - key: readability-identifier-length.IgnoredVariableNames
    value: "^i$"
  - key: readability-identifier-length.MinimumParameterNameLength
    value: "2"
  - key: readability-identifier-length.IgnoredParameterNames
    value: "^i|n|p$"
  - key: bugprone-easily-swappable-parameters.MinimumLength
    value: "3"

# Optional: fix style automatically
FormatStyle: file # Uses your .clang-format for formatting suggestions

